@model IEnumerable<SalonWebApplication.Models.ProductViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="#">
    <thead>
        <tr>
           @* <th>
                @Html.DisplayNameFor(model => model.ProductId)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductQty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductImg)
            </th>
           <th>@Html.Label("Actions")</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @*<td>
            @Html.DisplayFor(modelItem => item.ProductId)
        </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @item.ProductCost.ToString("C")
                @*@Html.DisplayFor(modelItem => item.ProductCost)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductQty)
            </td>
            <td>
                <img src="~/uploads/product_images/@item.ProductImg" width="50" height="50" />
                @*@Html.DisplayFor(modelItem => item.ProductImg)*@
            </td>
            <td>

                <a asp-action="Edit" class="btn-warning" asp-route-id="@item.ProductId "> <i class="fas fa-pencil" aria-hidden="true"> </i>Edit</a>   |
                <a asp-action="Details" class="btn-success" asp-route-id="@item.ProductId "> <i class="fade fa-info-circle" aria-hidden="true"> </i>Details</a>  |
                <a asp-action="Edit" class="btn-danger" asp-route-id="@item.ProductId " onclick="return confirm('Are you sure you would like to delete this piece of information?? ')"> <i class="fas fa-trash-alt"></i>Delete</a>  |



            </td>
        </tr>
}
    </tbody>
</table>
