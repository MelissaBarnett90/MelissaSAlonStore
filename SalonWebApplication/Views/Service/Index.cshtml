@model IEnumerable<SalonWebApplication.Models.ServiceViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Services</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ServiceId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>@Html.Label("Actions")</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>

                <a asp-action="Edit" class="btn-warning" asp-route-id="@item.ServiceId "> <i class="fas fa-pencil" aria-hidden="true"> </i>Edit</a>   |
                <a asp-action="Details" class="btn-success" asp-route-id="@item.ServiceId "> <i class="fade fa-info-circle" aria-hidden="true"> </i>Details</a>  |
                <a asp-action="Edit" class="btn-danger" asp-route-id="@item.ServiceId " onclick="return confirm('Are you sure you would like to delete this piece of information?? ')"> <i class="fas fa-trash-alt"></i>Delete</a>  |



            </td>
        </tr>
}
    </tbody>
</table>
